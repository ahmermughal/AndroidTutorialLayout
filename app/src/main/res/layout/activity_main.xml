<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:backgroundTintMode="src_atop"
    android:backgroundTint="#A6000000"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="Skyline Living"/>

    <LinearLayout
        android:id="@+id/layout_bottom_icons"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/button_main"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Room"/>

        <Button
            android:background="@drawable/button_main_accent"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textColor="@color/colorAccent"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Motel"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_top_icons"
        android:layout_width="match_parent"
        android:layout_above="@id/layout_bottom_icons"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/button_main_accent"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textColor="@color/colorAccent"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Apartment"/>

        <Button
            android:background="@drawable/button_main"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Town House"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:text="By clicking on any button you agree with our"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:text="Privacy Policy"/>




</RelativeLayout>