<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="#A6000000"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/layout_bottom_icons"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/unstitched_button"
                android:background="@drawable/button_main"
                android:padding="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="8dp"
                android:textColor="@android:color/white"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="Unstiched" />

            <Button
                android:id="@+id/stitched_button"
                android:background="@drawable/button_main_accent"
                android:padding="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="8dp"
                android:textColor="@color/colorAccent"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="Stitched" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_top_icons"
            android:layout_width="match_parent"
            android:layout_above="@id/layout_bottom_icons"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/casual_button"
                android:background="@drawable/button_main_accent"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/colorAccent"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="Casual" />

            <Button
                android:id="@+id/formal_button"
                android:background="@drawable/button_main"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@android:color/white"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="Formal" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginBottom="36dp"
            android:layout_alignParentBottom="true"
            android:text="By clicking on any button you agree with our" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:text="Privacy Policy" />
    </RelativeLayout>
</layout>